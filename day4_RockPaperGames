rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ðŸ‘‡
choose1 = [rock, paper, scissors]

choose = int(input("What do you choose? Type 0 for Rock, 1 for Paper or 2 for Scissors.\n"))
if choose == 0:
  print(rock)
if choose == 1:
  print(paper)
if choose == 2:
  print(scissors)

import random
# print(choose)
print("Computer chose:")
computer = random.choice(choose1)
print(computer)

if (choose == 0) and (computer == scissors):
    print("You win!")
elif (choose == 2) and (computer == paper):
    print("You win!")
elif (choose == 1) and (computer == rock):
    print("You win!")
elif (choose == 0) and (computer == rock):
    print("Try again!")    
elif (choose == 1) and (computer == paper):
    print("Try again!")    
elif (choose == 2) and (computer == scissors):
    print("Try again!")    
else:
  print("You lose!")
  
